    <%= form.label :state %>
    <%= form.text_field :state, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :value %>
    <%= form.text_field :value, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :datetime_start %>
    <%= form.text_field :datetime_start, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :datetime_complete %>
    <%= form.text_field :datetime_complete, class: 'form-control' %>
